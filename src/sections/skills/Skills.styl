@import 'rupture'

dark = #202020
light = #2b2b2b
white = #f4ebd9

rupture.scale = 0 300px 768px 1024px 1285px

dispFlex(direction = row, just = center, align = center)
    display flex
    flex-direction direction
    justify-content just
    align-items align

dispGrid()
    display grid
    place-items center

.skills
    margin-top 90px
    padding-block 20px
    width 100%
    height fit-content
    background-color dark
    dispFlex(row, center, center)

    + below(3)
        flex-direction column
        gap 20px

    .about
        width 40%
        height 535.2px
        background-color white
        dispGrid()

        + below(4)
            width 30%
            zoom 1
        
        + below(3)
            width 70%
            padding 20px
            background-color transparent

        + below(2)
            width 80%
            height fit-content
            padding 0

        .aboutCard
            background-color light
            color dark
            border-radius 10px
            width 300px
            height 350px
            dispFlex(column, center, center)
            position relative
            padding 10px
            gap 10px
            
            + below(3)
                zoom 1.3

            + below(2)
                zoom .8

            .logo
                position absolute
                top 10px
                left 10px

                h3
                    font-family "Rubik", sans-serif
                    color white
                    dispFlex(column, center, center)
                    font-size 10px
                    text-transform uppercase

                    span
                        color dark
                        background white
                        width 100%
                        dispGrid()
                
            .certiBtn
                position absolute
                top 9px
                left calc(32px + 58.34px)
                font-family "Rubik", sans-serif

                button
                    background-color white
                    border 1px solid white
                    border-left none
                    color white
                    cursor pointer
                    text-transform uppercase
                    transform skewX(-45deg)
                    width 112.93px
                    height 24.86px

                    &::before
                        content "CERTIFICATIONS"
                        dispGrid()
                        color dark
                        position absolute
                        top -1px
                        left -13px
                        width 100%
                        height 100%
                        border 1px solid white
                        border-right none
                        transform skewX(45deg)
                        background-color white
                        z-index 0
                        transition all 0.2s ease

                    &:hover
                        background-color transparent
                        color transparent
        
                        &::before
                            background-color light
                            color white

            .social
                position absolute
                top 20px
                right 20px
                dispFlex(row, center, center)
                gap 5px
                z-index 2

                .icon
                    color dark
                    font-size 18px
                    cursor pointer
                    transition transform 0.2s ease

                    &:nth-child(1)
                        --iconColor #0077AF
                

                    &:nth-child(2)
                        --iconColor #8a8a8a
                        font-size 15px
                

                    &:nth-child(3)
                        --iconColor #02A1FC
                

                    &:hover
                        transform translateY(-2px)
                        color var(--iconColor)

            .imgHolder
                width 100%
                height 100%
                background-color white
                border-radius 5px 0 5px 5px
                margin-top 35px
                position relative
                display flex
                flex-direction column
                align-items center
                justify-content flex-start
                padding-block 10px

                &::after
                    content ""
                    position absolute
                    top -35px
                    right 0
                    width 80px
                    height 36px
                    background-color white
                    border-radius 5px 5px 0 0
                    z-index 1

                &::before
                    content ""
                    position absolute
                    top -35px
                    right 19px
                    width 80px
                    height 36px
                    transform skewX(-45deg)
                    background-color white
                    border-radius 0 5px 0 0
                    z-index 1

                // &::before
                //     content ""
                //     position absolute
                //     top -33px
                //     right 67.5px
                //     width 34px
                //     height 58px
                //     background-color white
                //     border-radius 5px
                //     z-index 0
                //     rotate 45deg

            
                .mainContent
                    width 280px
                    display flex
                    flex-direction row
                    z-index 1
                    align-items center
                    justify-content center
                    gap 10px

                    img
                        width 100px
                        border 2px solid dark
                        border-radius 5px

                    h1
                        font-size x-large
                        text-transform uppercase

                    .text-wrapper
                        height 20px
                        position relative

                        h5
                            position absolute
                            translate 0 0 0
                            opacity 0
                            font-weight 500

                            &:nth-child(1)
                                animation h3Anim 2s
                                animation-delay 0s

                            &:nth-child(2)
                                animation h3Anim 2s
                                animation-delay 1.5s

                            &:nth-child(3)
                                animation h3Anim 2s
                                animation-delay 3s

                            @keyframes h3Anim 
                                0%
                                    transform translateY(10px)
                                    opacity 0
                                25%
                                    transform translateY(0px)
                                    opacity 1
                                75%
                                    transform translateY(0px)
                                    opacity 1
                                100%
                                    transform translateY(-10px)
                                    opacity 0
                            

                    p
                        font-size small

                        span
                            color #df2525
                            font-weight 600
            
                .aboutPara
                    margin 10px
                    text-align justify
            
                .trophies
                    position absolute
                    bottom 5px

                    img
                        width 280px

    .container
        width 60%
        height 100%
        background-color light
        dispFlex(column, start, center)
        gap 20px
        padding-inline 20px

        + below(4)
            width 70%

        .skillsContainer
            dispFlex(row, center, center)
            gap 20px
            flex-wrap wrap

            .skillCard
                position relative
                width 100px
                dispFlex(column, center, center)
                cursor pointer
                border 2px solid transparent

                +below(2)
                    width 55px

                    h3
                        font-size 10px

                &:hover
                    // border-color white
                    // box-shadow 0 0 5px white

                    img 
                        filter brightness(0.5)
                        transform translateY(-5px)

                    #dullIcons
                        filter invert(0)
                    
                    h3
                        transform translateY(-5px)
                        opacity 1
                        filter drop-shadow(0 0 5px white)
                        // bottom -30px

                img
                    width 90%
                    border 2px solid transparent
                    padding 5px

                #dullIcons
                    filter invert(1)

                h3
                    color white
                    position absolute
                    text-align center
                    dispGrid()
                    opacity 0
                    // bottom 0
                    width 100%
                    height 100%
                    border 2px solid white